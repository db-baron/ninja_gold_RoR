<div class="container">
    <div class="row">
        <h1>Your Gold: <%= @gold %></h1>
    </div>

    <div class='row text-center'>
        <div class="col-md-3">
            <h2>Farm</h2>
            <p>(10-20 gold)</p>
            <form action="/farm" method="post">
                <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                <button class="btn btn-default">Find Gold</button>
            </form>
        </div>
        <div class="col-md">
            <h2>House</h2>
            <p>(2-5 gold)</p>
            <form action="/house" method="post">
                <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                <button class="btn btn-default">Find Gold</button>
            </form>
        </div>
        <div class="col-md-3">
            <h2>Cave</h2>
            <p>(5-10 gold)</p>
            <form action="/cave" method="post">
                <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                <button class="btn btn-default">Find Gold</button>
            </form>
        </div>
        <div class="col-md">
            <h2>Casino</h2>
            <p>Earns/Takes 0-50 gold)</p>
            <form action="/casino" method="post">
                <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                <button class="btn btn-default">Find Gold</button>
            </form>
        </div>
        <hr>

        <div class="row" style="border: 2px solid black; height: 200px; overflow: scroll">
            <% @activities.each do |message| %>
                <% if message["won"] == true %>
                    <p style="color:green"><%= message["sentence"] %></p>
                <% else %>
                    <p style="color:red"><%= message["sentence"] %></p>
                <% end %>
            <% end %>
        </div>

    </div>


</div>
